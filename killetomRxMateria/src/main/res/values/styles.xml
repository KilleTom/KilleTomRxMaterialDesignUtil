<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RxRaisedDropButtonPrimaryStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <!--设置点亮的动画颜色-->
        <item name="android:colorControlHighlight">#DA6954</item>
        <!--设置正常背景颜色颜色-->
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <item name="android:colorControlActivated">#DA8736</item>
        <item name="android:colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="RxPermissionAnimFade">
        <item name="android:windowEnterAnimation">@anim/permission_dialog_fade_in</item>
        <item name="android:windowExitAnimation">@anim/permission_dialog_fade_out</item>
    </style>

    <style name="RxPermissionAnimScale">
        <item name="android:windowEnterAnimation">@anim/permission_dialog_scale_in</item>
        <item name="android:windowExitAnimation">@anim/permission_dialog_scale_out</item>
    </style>

    <style name="RxPermissionAnimModal">
        <item name="android:windowEnterAnimation">@anim/permission_dialog_modal_in</item>
        <item name="android:windowExitAnimation">@anim/permission_dialog_modal_out</item>
    </style>

</resources>
